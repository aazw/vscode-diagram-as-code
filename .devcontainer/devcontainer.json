{
  "name": "vsc-diagram-as-code-${localWorkspaceFolderBasename}-${devcontainerId}",
  "dockerComposeFile": [
    // ここに改行入れておけばPrettierによって配列が1行にならない
    "../compose.yaml",
    "./compose.yaml"
  ],
  "service": "devcontainer",
  "runServices": [
    // ここに改行入れておけばPrettierによって配列が1行にならない
    "plantuml-server",
    "mermaid-live-editor"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "emeraldwalk.runonsave",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "anthropic.claude-code",
        "openai.chatgpt",
        "shd101wyy.markdown-preview-enhanced",
        "jebbs.plantuml",
        "mermaidchart.vscode-mermaid-chart"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        // plantuml
        "plantuml.render": "PlantUMLServer",
        "plantuml.server": "http://plantuml-server:8080/",
        "plantuml.jar": "/usr/local/bin/plantuml.jar",
        "markdown-preview-enhanced.plantumlServer": "http://plantuml-server:8080/svg/", // Previewなのでホスト側からのアクセス(ポートフォワード)
        "markdown-preview-enhanced.plantumlJarPath": "/usr/local/bin/plantuml.jar",
        // mermaid
        "mermaidChart.baseUrl": "http://localhost:8080" // mermaid-live-editorではない(使えないし、使わない)
      }
    }
  },
  // "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces,type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "containerUser": "root", // コンテナ起動時・初期化処理のユーザ. docker psできるようにするために必要
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "TZ": "Asia/Tokyo",
    "TASK_X_ENV_PRECEDENCE": "1"
  },
  "postAttachCommand": "task init",
  "shutdownAction": "stopCompose"
}
