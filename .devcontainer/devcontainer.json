{
  // ${localWorkspaceFolderBasename} はgit worktreeを同階層同列運用する場合に操作中の対象の識別ができない問題に対応するためのもの
  "name": "vsc-diagram-as-code-${localWorkspaceFolderBasename}-${devcontainerId}",
  "dockerComposeFile": [
    // ここに改行入れておけばPrettierによって配列が1行にならない
    "../compose.yaml",
    "./compose.yaml"
  ],
  "initializeCommand": "bash -lc 'mkdir -p \"${localWorkspaceFolder}/.devcontainer/.state/claude\" \"${localWorkspaceFolder}/.devcontainer/.state/codex\"'",
  "service": "devcontainer",
  "runServices": [
    // ここに改行入れておけばPrettierによって配列が1行にならない
    "plantuml-server",
    "mermaid-live-editor"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "emeraldwalk.runonsave",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "anthropic.claude-code",
        "openai.chatgpt",
        // Markdown
        "shd101wyy.markdown-preview-enhanced",
        // PlantUML
        "jebbs.plantuml",
        // Mermaid
        "mermaidchart.vscode-mermaid-chart"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        // plantuml
        "plantuml.render": "PlantUMLServer",
        "plantuml.server": "http://plantuml-server:8080/",
        "plantuml.jar": "/usr/local/bin/plantuml.jar",
        "markdown-preview-enhanced.plantumlServer": "http://plantuml-server:8080/svg/", // Previewなのでホスト側からのアクセス(ポートフォワード)
        "markdown-preview-enhanced.plantumlJarPath": "/usr/local/bin/plantuml.jar",
        // mermaid
        "mermaidChart.baseUrl": "http://localhost:8080" // mermaid-live-editorではない(使えないし、使わない)
      }
    }
  },
  // git worktree の同階層同列運用をDevContainer内でも利用可能する場合は有効化する (git worktree add --relative-paths 運用前提)
  // "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces,type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    {
      // ~/.claude に保存される claude code のセッションを永続化 (DevContainer再作成時など)
      "source": "${localWorkspaceFolder}/.devcontainer/.state/claude",
      "target": "/home/vscode/.claude",
      "type": "bind"
    },
    {
      // ~/.codex に保存される codex のセッションを永続化 (DevContainer再作成時など)
      "source": "${localWorkspaceFolder}/.devcontainer/.state/codex",
      "target": "/home/vscode/.codex",
      "type": "bind"
    }
  ],
  // containerUser は、コンテナ起動時・初期化処理のユーザ. docker psできるようにするために必要
  "containerUser": "root",
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "TZ": "Asia/Tokyo",
    "TASK_X_ENV_PRECEDENCE": "1"
  },
  "postAttachCommand": "task init",
  "shutdownAction": "stopCompose"
}
